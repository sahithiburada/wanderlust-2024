<% layout("/layouts/boilerplate") %>

<div class="container">
    <h1>Payment for Booking</h1>
    <p><strong>Selected Date:</strong> <%= booking.bookingDate.toDateString() %></p>
    <p><strong>Number of Guests:</strong> <%= booking.guests %></p>
    <p><strong>Duration:</strong> <%= booking.duration %> days</p>
    <p><strong>Price:</strong> â‚¹<%= totalPrice %></p>

    <form action="/bookings/payment/confirm/<%= booking._id %>" method="POST">
        <label for="cardNumber">Card Number:</label>
        <input type="text" id="cardNumber" name="cardNumber" required>
        
        <label for="expiryDate">Expiry Date:</label>
        <input type="text" id="expiryDate" name="expiryDate" required placeholder="MM/YY">
        
        <label for="cvv">CVV:</label>
        <input type="text" id="cvv" name="cvv" required>
        
        <button type="submit">Pay Now</button>
    </form>
</div>